  width: 80%;
}
.goodsinfo .price {
  padding: 5px 10px;
  font-weight: bold;
  font-size: 40rpx;
  color: #eb4450;
}
.goodsinfo .namebox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  padding: 5px;
  color: #666;
  border-top: 5px solid #dedede;
  border-bottom: 5px solid #dedede;
}
.goodsinfo .namebox .name {
  -webkit-box-flex: 8;
